{
  "name": "svg-colorizer",
  "version": "0.2.1",
  "description": "Modify colors in SVG elements for web and server-side applications.",
  "scripts": {
    "build": "npx tsup --config tsup.config.js",
    "build:watch": "npx tsup --config tsup.config.js --watch",
    "release": "npm run build && rm -rf ./test",
    "test": "npx jest"
  },
  "keywords": [
    "svg",
    "colorizer",
    "colors",
    "fill",
    "vector",
    "image"
