    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.6",
    "@types/tinycolor2": "^1.4.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.0.0",
    "tinycolor2": "^1.6.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Arman2409/svg-colorizer"
  },
  "type": "module"
